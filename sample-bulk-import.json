        {
          "type": "choice",
          "text": "Nach ___ Unterricht gehen wir nach Hause.",
          "options": ["der", "dem", "den", "die"],
          "answer": "dem"
        }
      ]
    },
    {
      "name": "Mixed Dative Practice",
      "description": "Comprehensive dative case practice",
      "questions": [
        {
          "type": "error-correction",
          "text": "Ich gebe der Mann ein Buch.",
          "answer": "Ich gebe dem Mann ein Buch."
        },
        {
          "type": "error-correction",
          "text": "Sie hilft die Kinder mit den Hausaufgaben.",
          "answer": "Sie hilft den Kindern mit den Hausaufgaben."
